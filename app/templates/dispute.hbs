{{view Balanced.TransactionPageNavigationView model=model}}

{{#view Balanced.BodyPanelView}}
	{{#view Balanced.SidePanelView model=model}}
		{{view Balanced.DisputeSummarySectionView model=model}}
		{{view Balanced.DisputeTitledKeyValuesSectionView model=model}}
		{{view Balanced.MetaView type=model}}
	{{/view}}

	{{#view Balanced.MainPanelView}}
		<h3>Associated transactions</h3>
		<div class="results">
			{{view Balanced.EmbeddedTransactionsResultsView loader=transactionsResultsLoader hasNoFilter=true}}

		{{#if canUploadDocuments}}
			<div class="dispute-alert">
				{{#view Balanced.NotificationMessageView}}
					Provide documentation by <span class="sl-sb">{{humanReadableDateLong respond_by}}</span> to avoid a loss.
					<div class="pull-right">
						<a class="btn" {{action "openModal" Balanced.EvidencePortalModalView model}}>Attach docs</a>
					</div>
				{{/view}}
			</div>
		{{/if}}

		<h3>Documents</h3>
		<div class="results documents">
			{{view Balanced.ResourceDocumentsView content=model}}
		</div>

		<h3>Logs</h3>
		<div class="results">
			{{view Balanced.ResourceLogsView content=model}}
		</div>

		<h3>Events</h3>
		<div class="results">
			{{view Balanced.ResourceEventsView content=model}}
		</div>
	{{/view}}
{{/view}}
