<h1 class="page-title">Hold</h1>

<div id="hold" class="transaction">

  <div class="main-header transactions-header">
    <div class="row">
      <div class="span2 label">
        <div class="icon">Hold</div>
      </div>
        <div class="span12 title">
        <span class="nav3d">
          {{page_title}}
        </span>
      </div>

        <div class="span8 buttons">
          <div class="buttons-container"></div>
        </div>
    </div>
  </div>

  {{txn-customer customer=customer}}

  <div class="transaction-details">
    {{#if debit}}
      {{#each refund in debit.refunds}}
        {{txn-refund refund=refund}}
      {{/each}}
      {{txn-debit debit=debit}}
    {{/if}}
    {{txn-hold hold=model}}
  </div>
</div>
