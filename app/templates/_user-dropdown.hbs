<div id="user-menu" class="dropdown borderless nav-item">
{{#if auth.signedIn}}

	<a href="#" data-toggle="dropdown" class="dropdown-toggle gravatar">
		<i class="icon-customers"></i>
		<span>
			{{#if auth.isGuest}}
				Guest user
			{{else}}
				{{auth.user.email_address}}
			{{/if}}
		</span>
		<b class="caret"></b>
	</a>
	<ul class="dropdown-menu">
		{{#if auth.isGuest}}
			<li><a {{action "signUp" target="controllers.application"}}>Create an account</a></li>
		{{else}}
			<li class="change-email">
				<a href="#" {{action "openChangeEmailModal" target="controllers.application"}}>Change email address</a>
			</li>
			<li class="change-password">
				<a href="#" {{action "openChangePasswordModal" target="controllers.application"}}>Change password</a>
			</li>
			<li>{{#link-to 'accountSecurity'}}Account security{{/link-to}}</li>
		{{/if}}
		<li><a href="https://support.balancedpayments.com" target='_blank'>Help center</a></li>
		<li><a href="#" {{action "signOut"}}>Log out</a></li>
	</ul>
{{else}}
	{{#link-to 'login' class="nav1d nav-login"}}Log in{{/link-to}}
{{/if}}
</div>
