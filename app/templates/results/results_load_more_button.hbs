<tr>
	<td {{bind-attr colspan=view.columns}} class="load-more-results">
		{{#if view.results.loadingNextPage}}
			<div class="loader-container">
				<span class="loader loading"></span>
			</div>
		{{else}} {{#if view.results.hasNextPage}}
			<a class="btn sm secondary" {{action "loadMore" view.results target=view}}>Load more</a>
		{{/if}} {{/if}}
	</td>
</tr>
