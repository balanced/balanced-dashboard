<h1 class="page-title">Credit</h1>

<div id="credit" class="transaction">

  <div class="main-header transactions-header">
    <div class="row">
      <div class="span2 label">
        <div class="icon">Credit</div>
      </div>
        <div class="span10 title">
        <span class="nav3d">
          {{page_title}}
        </span>
      </div>

        <div class="span8 buttons">
          <div class="buttons-container"></div>
        </div>
    </div>
  </div>

  {{txn-customer customer=customer}}

  <div class="transaction-details">
    {{#each reversal in model.reversals}}
      {{txn-reversal reversal=reversal}}
    {{/each}}
    {{txn-credit credit=model marketplace=controllers.marketplace.model}}
  </div>
</div>
