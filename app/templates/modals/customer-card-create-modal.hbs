{{#view "form-fields/form-section" model=view.model sectionTitle="Card information"}}
	{{view "form-fields/text-form-field"
		model=view.model
		labelText="Name on account"
		field="name"
		inputClassNames="full"
	}}

	{{view "form-fields/text-form-field"
		model=view.model
		labelText="Card number"
		field="number"
		inputClassNames="full"
	}}

	{{view "form-fields/text-form-field"
		model=view.model
		labelText="Security code"
		field="cvv"
		tooltipTitle="Where is the security code?"
		tooltipContent='<img src="images/credit-card-instructions.png" alt="Credit Card Instructions" class="modal-informational-content"/>'
	}}

	{{view "form-fields/month-year-select-form-field"
		model=view.model
		monthValue=view.model.expiration_month
		yearValue=view.model.expiration_year
		labelText="Expiration date"
		name="expiration_date"
	}}

	{{view "form-fields/text-form-field" model=view.model field="address.postal_code" labelText="Billing zip code" explanationText="Required for American Express cards"}}
{{/view}}

{{#view "form-fields/form-section" model=view.model sectionTitle="Additional information (optional)"}}
	{{view "form-fields/text-form-field"
		model=view.model
		labelText="Street address (line 1)"
		field="address.line1"
		inputClassNames="full"
	}}
	{{view "form-fields/text-form-field"
		model=view.model
		labelText="Street address (line 2)"
		field="address.line2"
		inputClassNames="full"
	}}
	{{view "form-fields/text-form-field"
		model=view.model
		labelText="City"
		field="address.city"
		inputClassNames="full"
	}}
	{{view "form-fields/text-form-field"
		model=view.model
		labelText="State"
		field="address.state"
		inputClassNames="full"
	}}
	{{view "form-fields/country-select"
		model=view.model
		labelText="Country"
		field="address.country_code"
		name="country_code"
		inputClassNames="full"
	}}
{{/view}}
