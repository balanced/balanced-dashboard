<div class="refund">
	<div {{bind-attr class=":transaction-type-subheader refund.status"}}>
		<div class="tt-label">Refund</div>
		<div class="tt-content">
			<span class="tt-title">
				{{titleCase refund.status}}: {{formatCurrency refund.amount}}
			</span>
		</div>
	</div>
	<div class="transaction-body">
		<div class="row-fluid">
			<div class="span25 border-adjust">
				<section class="transaction-info">
					<div class="key-value-display">
						<header>
							<h3>Refund
								{{edit-transaction-modal transaction=refund}}
							</h3>
						</header>
						{{txn-description transaction=refund}}
					</div>
				</section>

				{{txn-funding-instrument funding_instrument=refund.debit.source}}
			</div>
		</div>
		<div class="row-fluid">
			<div class="span25 border-adjust">
				{{view Balanced.ResourceLogsView contentBinding="refund"}}
			</div>
		</div>
		<div class="row-fluid">
			<div class="span25 border-adjust">
				{{view Balanced.ResourceEventsView contentBinding="refund"}}
			</div>
		</div>
	</div>
</div>
