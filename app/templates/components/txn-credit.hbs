<div class="credit">
  <div {{bindAttr class=":main-header :transaction-type-subheader credit.status"}}>
    <div class="row">
      <div class="span2 border-adjust label">
        <span class="subhead2d">Credit</span>
      </div>
      <div class="span10 title">
        <span class="transaction-description subhead2d">{{titleCase credit.status}}: ${{credit.amount_dollars}}</span>
      </div>
      <div class="span8 border-adjust buttons">
        <div class="buttons-container">
          {{#if can_reverse_credit}}
            {{reverse-credit-modal credit=credit}}
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  <div class="transaction-body">
    <div class="row">
      <div class="span2 border-adjust"></div>
      <div class="span18 border-adjust">
        <div class="row-fluid">
          <div class="span16">
            <section class="transaction-info">
              <div class="key-value-display">
                <header>
                  <h3>Credit
                    {{edit-transaction-modal transaction=credit}}
                  </h3>
                </header>
                <div class="key-value-row">
                  <label class="key">Status</label>
                  <span class="value">{{ credit.status_description }}</span>
                </div>
                <div class="key-value-row">
                  <label class="key">Expected</label>
                  <span class="value">
                    <a href="https://docs.balancedpayments.com/current/#submission-delivery-times" target="_blank" class="label4a linky">See payout schedule</a></span>
                  </span>
                </div>
                <div class="key-value-row">
                  <label class="key">Created</label>
                  <span class="value">{{humanReadableDateLong credit.created_at }}</span>
                </div>
                <div class="key-value-row">
                  <label class="key">Description</label>
                  <span class="value">{{ credit.description }}</span>
                </div>
                <div class="key-value-row">
                  <label class="key">ID</label>
                  <span class="value">{{ credit.id }}</span>
                </div>
                <div class="key-value-row">
                  <label class="key">Txn #</label>
                  <span class="value">{{ credit.transaction_number }}</span>
                </div>
                <div class="key-value-row">
                  <label class="key">On statement as</label>
                  <span class="value">{{ credit.appears_on_statement_as }}</span>
                </div>
                <div class="key-value-row">
                  <label class="key">Meta</label>
                  <span class="value">
                    {{#each meta in credit.meta_array}}
                      {{ meta.key }}: {{ meta.value }}<br/>
                    {{/each}}
                  </span>
                </div>
              </div>
            </section>

            {{txn-funding-instrument funding_instrument=credit.bank_account}}
          </div>
          <div class="span10">
            {{view Balanced.EventsSideBarView contentBinding=credit}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
