<div class="modal hide delete-key">
	<form {{action "confirm" on="submit"}}>
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">Ã—</button>
			<h2>Delete this key</h2>
		</div>

		<div class="modal-body">
			<div class="content">
				<p>Are you sure you want to delete this key?</p>
				<p>This key will be deleted immediately.</p>
				<ul>
					<li class="sl-sb">ID: {{key.id}}</li>
					{{#if key.meta.name}}
						<li class="sl-sb">Name: {{key.meta.name}}</li>
					{{/if}}
				</ul>
			</div>
		</div>

		<div class="modal-footer">
			{{view "modals/action-buttons" submitTitle="Delete"}}
		</div>
	</form>
</div>

{{#if displayDelete}}
	<div class="delete-key-outer">
		<a {{action "open"}}>
			<i class="icon-table-x confirm-delete-key action"></i>
		</a>
	</div>
{{/if}}
