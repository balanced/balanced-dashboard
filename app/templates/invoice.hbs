<h1>Statement #{{sequence_number}}</h1>

<div id="invoice">
	<section class="customer-info clearfix">
		<header>
			<h3>Bill to:</h3>
		</header>
		<div>
			<h4>
				<div>
					{{#if marketplace.production}}
						{{marketplace.owner_customer.display_me}}
					{{else}}
						Test
					{{/if}}
				</div>

				{{#if marketplace.owner_customer.is_business}}
				<div>
					{{#if marketplace.production}}
						{{marketplace.owner_customer.business_name}}
					{{else}}
						Test
					{{/if}}
				</div>
				{{/if}}

				{{#if marketplace.owner_customer.address_string}}
				<div>
					{{#if marketplace.production}}
						{{marketplace.owner_customer.address_string}}
					{{else}}
						Test
					{{/if}}
				</div>
				{{/if}}
			</h4>
		</div>
	</section>

	<div class="row-fluid">
		<div class="span15">
			<section class="invoice-info">
				<div class="key-value-display">
					<header>
						<h3>Summary</h3>
					</header>
					<dl class="dl-horizontal">
						<dt>Date</dt>
						<dd><span>{{humanReadableDateShort created_at}}</span></dd>

						{{#if period}}
							<dt>Period</dt>
							<dd><span>{{humanReadableDateShort from_date}} - {{humanReadableDateShort to_date}}</span></dd>
						{{/if}}

						<dt>Status</dt>
						<dd><span>
							{{#if is_scheduled}}
								Scheduled for debit at
							{{else}}
								Debited at
							{{/if}}

							{{humanReadableDateShort settle_at}}
						</span></dd>

						<dt>From</dt>
						<dd><span>
							{{#if source}}
								{{source.description}}
							{{else}}
								<i>Default</i>
							{{/if}}

							{{#if is_not_paid}}
								<span class="hidden-print">({{change-funding-source-modal marketplaceBinding="controllers.marketplace.model" source_uri=source.uri model=model}})</span>
							{{/if}}
						</span></dd>
					</dl>
				</div>
			</section>
		</div>

		<div class="offset1 span10">
			<section class="total-info">
				<header class="clearfix">
					<h3 class="pull-left">Balance due</h3>
					<h3 class="pull-right hidden-print"><a href="#" {{action "printSummary"}}>Print Summary</a></h3>
				</header>

				<div class="invoice-balance-due-box">
					<div class="row-fluid">
						<div class="span2 label">
							<div class="icon">Statement</div>
						</div>
						<div class="amount">
							<span class="number1d">
								{{formatCurrency total_fee}}
							</span>
						</div>
					</div>
					<table class="invoice-details">
						<tfoot class="">
							<tr class="subtotal-row">
								<td class="label4a"><span>Total Transaction Fees</span></td>
								<td class="total number3a"><span>{{formatCurrency subtotal}}</span></td>
							</tr>
							<tr class="adjustments-row">
								<td class="label4a top-border"><span>Total Adjustments</span></td>
								<td class="total number3a top-border"><span>{{formatCurrency adjustments_total_fee}}</span></td>
							</tr>
							<tr class="total-balance-row">
								<td class="label4a top-border"><span>Balance due</span></td>
								<td class="total number3a top-border"><span>{{formatCurrency total_fee}}</span></td>
							</tr>
						</tfoot>
					</table>
				</div>
			</section>
		</div>
	</div>

	<section class="activity invoice-details-table">
		<header class="results-label">
			<h3>Transaction Fees</h3>
		</header>
		<table class="items non-interactive">
			<thead>
				<tr>
					<th class="span6 label6a"><span>Type</span></th>
					<th class="span2 label6a num"><span>Quantity</span></th>
					<th class="span3 label6a num"><span>Transaction amount</span></th>
					<th class="span7 label6a"><span>Fee</span></th>
					<th class="span3 label6a num"><span>Total</span></th>
				</tr>
			</thead>
			<tbody>
			{{#if isDispute}}
				<tr class="chargeback-details-row">
					<td class="span4 label4a"><span>Disputes</span></td>
					<td class="span2 num"><span>{{formatNumber disputes_count}}</span></td>
					<td class="span6 num"><span>{{formatCurrency disputes_total_amount}}</span></td>
					<td class="span7"><span>{{formatCurrency dispute_fixed_fee}} per dispute</span></td>
					<td class="span3 num"><span>{{formatCurrency disputes_total_fee}}</span></td>
				</tr>
			{{else}}
				{{#if hasHoldsFee}}
					<tr class="hold-details-row">
						<td class="span4 label4a"><span>Holds</span></td>
						<td class="span2 num"><span>{{formatNumber holds_count}}</span></td>
						<td class="span6 num"><span>{{formatCurrency holds_total_amount}}</span></td>
						<td class="span7"><span>{{formatCurrency hold_fee}} per hold</span></td>
						<td class="span3 num"><span>{{formatCurrency holds_total_fee}}</span></td>
					</tr>
				{{/if}}
				<tr class="card-debit-details-row">
					<td class="span4 label4a"><span>Debits: cards</span></td>
					<td class="span2 num"><span>{{formatNumber card_debits_count}}</span></td>
					<td class="span6 num"><span>{{formatCurrency card_debits_total_amount}}</span></td>
					<td class="span7"><span>{{variable_fee_percentage}}% of txn amount + {{card_debit_fixed_fee}} cents</span></td>
					<td class="span3 num"><span>{{formatCurrency card_debits_total_fee}}</span></td>
				</tr>
				<tr class="bank-account-debit-details-row">
					<td class="span4 label4a"><span>Debits: bank accounts</span></td>
					<td class="span2 num"><span>{{formatNumber bank_account_debits_count}}</span></td>
					<td class="span6 num"><span>{{formatCurrency bank_account_debits_total_amount}}</span></td>
					<td class="span7"><span>
						{{bank_account_debit_variable_fee_percentage}}% of txn amount
						{{#if bank_account_debit_variable_fee_cap}}
							(max {{formatCurrency bank_account_debit_variable_fee_cap}} per debit)
						{{/if}}
					</span></td>
					<td class="span3 num"><span>{{formatCurrency bank_account_debits_total_fee}}</span></td>
				</tr>
				<tr class="succeeded-credit-details-row">
					<td class="span4 label4a"><span>Credits: bank accounts (succeeded)</span></td>
					<td class="span2 num"><span>{{formatNumber bank_account_credits_count}}</span></td>
					<td class="span6 num"><span>{{formatCurrency bank_account_credits_total_amount}}</span></td>
					<td class="span7"><span>{{formatCurrency bank_account_credit_fee}} per credit</span></td>
					<td class="span3 num"><span>{{formatCurrency bank_account_credits_total_fee}}</span></td>
				</tr>
				<tr class="succeeded-credit-details-row">
					<td class="span4 label4a"><span>Credits: push to card (succeeded)</span></td>
					<td class="span2 num"><span>{{formatNumber card_credits_count}}</span></td>
					<td class="span6 num"><span>{{formatCurrency card_credits_total_amount}}</span></td>
					<td class="span7"><span>{{formatCurrency card_credit_fixed_fee}} per credit</span></td>
					<td class="span3 num"><span>{{formatCurrency card_credits_total_fee}}</span></td>
				</tr>
				<tr class="failed-credit-details-row">
					<td class="span4 label4a"><span>Credits: failed</span></td>
					<td class="span2 num"><span>{{formatNumber failed_credits_count}}</span></td>
					<td class="span6 num"><span>{{formatCurrency failed_credits_total_amount}}</span></td>
					<td class="span7"><span>{{formatCurrency failed_credit_fee}} per failed credit</span></td>
					<td class="span3 num"><span>{{formatCurrency failed_credits_total_fee}}</span></td>
				</tr>
				<tr class="refund-details-row">
					<td class="span4 label4a"><span>Refunds</span></td>
					<td class="span2 num"><span>{{formatNumber refunds_count}}</span></td>
					<td class="span6 num"><span>{{formatCurrency refunds_total_amount}}</span></td>
					<td class="span7"><span>{{variable_fee_percentage}}% of txn amount returned</span></td>
					<td class="span3 num"><span>{{formatCurrency refunds_total_fee}}</span></td>
				</tr>
				<tr class="reversal-details-row">
					<td class="span4 label4a"><span>Reversals</span></td>
					<td class="span2 num"><span>{{formatNumber reversals_count}}</span></td>
					<td class="span6 num"><span>{{formatCurrency reversals_total_amount}}</span></td>
					<td class="span7"><span>{{formatCurrency reversal_fee}} per reversal</span></td>
					<td class="span3 num"><span>{{formatCurrency reversals_total_fee}}</span></td>
				</tr>
			{{/if}}
			</tbody>
			<tfoot>
				<tr class="subtotal-row">
					<td class="span19 label4a sl-sb" colspan="4"><span>Total Transaction Fees</span></td>
					<td class="span3 num sl-sb"><span>{{formatCurrency subtotal}}</span></td>
				</tr>
			</tfoot>
		</table>
	</section>


	{{#if model.adjustments.length}}
		<section class="activity adjustment-details-table">
			<header class="results-label">
				<h3>Adjustments</h3>
			</header>
			<table class="invoice-details">
				<thead>
					<tr>
						<th class="span18 label6a"><span>Description</span></th>
						<th class="span2 label6a num"><span>Total</span></th>
					</tr>
				</thead>
				<tbody>
					{{#each adjustment in model.adjustments}}
					<tr>
						<td class="span18 label4a"><span>{{adjustment.description}}</span></td>
						<td class="span2 num number3a"><span>{{formatCurrency adjustment.amount}}</span></td>
					</tr>
					{{/each}}
				</tbody>
				<tfoot>
					<tr class="adjustments-row">
						<td class="span18 label4a"><span>Total Adjustments</span></td>
						<td class="span2 num number3a"><span>{{formatCurrency adjustments_total_fee}}</span></td>
					</tr>
				</tfoot>
			</table>
		</section>
	{{/if}}

	<section class="activity">
		<header class="results-label">
			<h3>{{invoice_type}}</h3>
		</header>
		<div class="results">
			{{#if isDispute}}
				<div class="items-wrapper">
					{{view Balanced.DisputesResultsView disputesBinding="dispute_results"}}
				</div>
			{{else}}
				{{view Balanced.TransactionsFiltersHeaderView showExtraTransactionTypes=true}}
				<div class="items-wrapper">
					{{view Balanced.TransactionsResultsView transactionsBinding="results"}}
				</div>
			{{/if}}
		</div>
	</section>
</div>
